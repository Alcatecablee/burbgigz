{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "server/dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "removeComments": true
  },
  "include": ["server/src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "server/dist", "dist"]
}